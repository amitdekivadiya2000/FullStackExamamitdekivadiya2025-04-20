{
  "info": {
    "name": "E-Commerce API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/auth/register",
            "body": {
              "mode": "raw",
              "raw": {
                "email": "user@example.com",
                "password": "password123",
                "name": "John Doe"
              }
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": {
                "email": "user@example.com",
                "password": "password123"
              }
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/auth/profile",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/products"
          }
        },
        {
          "name": "Search Products",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/products/search",
            "query": [
              {
                "key": "q",
                "value": "search term"
              }
            ]
          }
        },
        {
          "name": "Get Categories",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/products/categories"
          }
        },
        {
          "name": "Get Product by ID",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/products/:id"
          }
        },
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/products",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": {
                "name": "Product Name",
                "description": "Product Description",
                "price": 99.99,
                "category": "Category Name",
                "imageUrl": "https://example.com/image.jpg",
                "stock": 100
              }
            }
          }
        },
        {
          "name": "Update Product",
          "request": {
            "method": "PUT",
            "url": "{{base_url}}/products/:id",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": {
                "name": "Updated Product Name",
                "description": "Updated Description",
                "price": 149.99,
                "category": "Updated Category",
                "imageUrl": "https://example.com/updated-image.jpg",
                "stock": 50
              }
            }
          }
        },
        {
          "name": "Delete Product",
          "request": {
            "method": "DELETE",
            "url": "{{base_url}}/products/:id",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Cart",
      "item": [
        {
          "name": "Get Cart",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/cart",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        },
        {
          "name": "Add to Cart",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/cart",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": {
                "productId": "product_id",
                "quantity": 1
              }
            }
          }
        },
        {
          "name": "Update Cart Item",
          "request": {
            "method": "PUT",
            "url": "{{base_url}}/cart/:itemId",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": {
                "quantity": 2
              }
            }
          }
        },
        {
          "name": "Remove from Cart",
          "request": {
            "method": "DELETE",
            "url": "{{base_url}}/cart/:itemId",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        },
        {
          "name": "Clear Cart",
          "request": {
            "method": "DELETE",
            "url": "{{base_url}}/cart",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/orders",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        },
        {
          "name": "Get Orders",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/orders",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        },
        {
          "name": "Get Order by ID",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/orders/:id",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        },
        {
          "name": "Update Order Status",
          "request": {
            "method": "PUT",
            "url": "{{base_url}}/orders/:id/status",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": {
                "status": "PROCESSING"
              }
            }
          }
        }
      ]
    },
    {
      "name": "Reports",
      "item": [
        {
          "name": "Get Daily Revenue",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/reports/daily-revenue",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        },
        {
          "name": "Get Top Customers",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/reports/top-customers",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        },
        {
          "name": "Get Sales by Category",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/reports/sales-by-category",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        },
        {
          "name": "Get Order Status Distribution",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/reports/order-status",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        },
        {
          "name": "Get Low Stock Products",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/reports/low-stock",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000/api"
    },
    {
      "key": "token",
      "value": "your_jwt_token_here"
    }
  ]
}